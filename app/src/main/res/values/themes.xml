<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">#1C2E3C</item>
        <item name="android:navigationBarColor">#1C2E3C</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme_Input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/bg_mh_input_box</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme_OptionText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/bg_mh_input_box</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Theme_TextProfile">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>